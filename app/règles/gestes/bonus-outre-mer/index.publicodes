          alors: 30 €/m2
        - sinon: 20 €/m2
    barème Guadeloupe: 20 €/m2
    barème Martinique:
      variations:
        - si:
            une de ces conditions:
              - ménage . revenu . classe = 'très modeste'
              - ménage . revenu . classe = 'modeste'
          alors: 18 €/m2
        - sinon: 14 €/m2 # TODO MAJ 2025 étrange qui donnerait 20 € soit plus au plus aisés, donc on garde les valeurs de 2024
    barème Mayotte:
      variations:
        - si:
            une de ces conditions:
              - ménage . revenu . classe = 'très modeste'
